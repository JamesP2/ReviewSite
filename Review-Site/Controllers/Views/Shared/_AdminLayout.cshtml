<!DOCTYPE html>
<html>
<head>
    @{
        if(ViewBag.Title != null){    
            <title>theREVIEW Admin &bull; @ViewBag.Title</title>
        }else{
            <title>theREVIEW Admin</title>
        }
    }
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")" type="text/javascript"></script>
</head>
<body style="padding-top: 40px;">
    <div class="container-fluid">
        <div class="navbar navbar-fixed-top">
          <div class="navbar-inner">
            <a class="brand" href="@Url.Action("Index", new { controller="Admin", area = "Admin" })" style="margin-left: 0px;">Site Admin</a>
            <ul class="nav">
              <li><a href="@Url.Action("Index", new { controller="Article", area = "Admin" })">Articles</a></li>
              <li><a href="@Url.Action("Index", new { controller="Category", area = "Admin" })">Categories</a></li>
              <li><a href="@Url.Action("Index", new { controller="Resource", area = "Admin" })">Resources</a></li>
              <li><a href="@Url.Action("Index", new { controller="Grid", area = "Admin" })">Grids</a></li>
              <li><a href="@Url.Action("Index", new { controller="User", area = "Admin" })">Users</a></li>
            </ul>
            @{
                if(User.Identity.IsAuthenticated){
                    <p class="pull-right navbar-text" style="margin-right: 10px;">Hello, @User.Identity.Name. <a href="@Url.Action("LogOut", new { controller = "Account", area = ""})">Log Out</a></p>
                }else{
                    <p class="pull-right navbar-text" style="margin-right: 10px;">Hello, Guest. <a href="@Url.Action("LogIn", new { controller = "Account" })">Log In</a></p>
                }
            }
            
          </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p class="pull-right">Work In Progress.</p>
        </footer>
    </div>
</body>
</html>
