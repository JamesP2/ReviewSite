@model Review_Site.Data.Models.Resource

@{
    Layout = "~/Views/Shared/_AdminLayoutBare.cshtml";
    ViewBag.Title = "Upload Resource";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Upload Resource</h2>

@using (Html.BeginForm("MiniUpload", "Resource", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Source)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Source)
            @Html.ValidationMessageFor(model => model.Source)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SourceTextColor)
        </div>
        <div class="editor-field">
            @Html.DropDownList("SourceTextColor.ID", (SelectList)ViewBag.SourceTextColorID)
            @Html.ValidationMessageFor(model => model.SourceTextColor.ID, "You must choose a Colour!")
        </div>
        <div class="editor-label">
            Resource File (Maximum size 10MB)
        </div>
        <div class="editor-field">
            <input type="file" name="file" />
        </div>

        <p>
            <input type="submit" class="btn btn-primary" value="Upload" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "MiniBrowser")
</div>
