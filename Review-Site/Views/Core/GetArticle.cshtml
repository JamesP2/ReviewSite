@model Review_Site.Models.Article
@{
    ViewBag.Title = Model.Title;
    if(Model.Category != null) {
        ViewBag.ImageBorderColor = Model.Category.Color.Value;
    }
}
<div class="row">
    <div class="span8">
        <h1 class="article-title">@Model.Title</h1>
        <div class="article">
            <p class="article-info">
                Written by @Model.Author.FullName on the @Model.Created.ToString("dd/MM/yyyy")
                at @Model.Created.ToShortTimeString()</p>
            @{
                if (Model.LastModified.Value != Model.Created)
                {
                <p class="article-info" style="top: 20px">
                    Last edited on the @Model.LastModified.Value.ToString("dd/MM/yyyy") at @Model.LastModified.Value.ToShortTimeString()</p>
                }
            }
            <div class="article-content">
                @Html.Raw(Model.Text)
            </div>
            <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style ">
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet"></a>
            </div>
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-5156266e43e0e6ba"></script>
            <!-- AddThis Button END -->
        </div>
    </div>
    <div class="span4">
        @Html.Partial("_Sidebar")
    </div>
</div>