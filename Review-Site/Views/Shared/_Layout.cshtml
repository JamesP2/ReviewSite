<!DOCTYPE html>
<html>
<head>
    @{
        if(ViewBag.Title != null){    
            <title>theREVIEW &bull; @ViewBag.Title</title>
        }else{
            <title>theREVIEW</title>
        }
    }
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="span12 header"><h1><span style="color: #C4BC96;">the</span>REVIEW</h1><h2>| Inspiring text here...</h2></div>
        </div>
        <div class="row">
            <div class="span12 menu">
                <ul>
                    <li style="color: #F3B32B;">World News</li>
                    <li class="separator">|</li>
                    <li style="color: #DA9349;">Student News</li>
                    <li class="separator">|</li>
                    <li style="color: #8AA359;">Science/Tech</li>
                    <li class="separator">|</li>
                    <li style="color: #0B76C2;">Media</li>
                    <li class="separator">|</li>
                    <li style="color: #FF5250;">Sport</li>
                    <li class="separator">|</li>
                    <li style="color: #FF36FF;">Fashion</li>
                    <li class="separator">|</li>
                    <li style="color: #A11CFF;">Creative</li>
                    <li class="separator">|</li>
                    <li>Misc</li>
                    <li class="separator">|</li>
                    <li>About Us</li>
                </ul>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-right footerRightText">
            <p>Work In Progress.</p>
            @{
                if(User.Identity.IsAuthenticated){
                    <p>Logged in as @User.Identity.Name (<a href="@Url.Action("LogOut", new { controller = "Account" })">Logout</a>)</p>
                }
            }
            </div>
            <ul>
                <li class="header">Menu</li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
            </ul>
            <ul>
                <li class="header">Menu</li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
            </ul>
        </footer>
    </div>
</body>
</html>
