@model Review_Site.Models.PagedArticleList
@foreach (var article in Model.Articles)
{
    <div class="media">
        <img class="media-object pull-left" src="http://placehold.it/64x64">
        <div class="media-body">
            <a href="@Url.Action("GetArticle", "Home", new { area = "", id = article.ID })">
                <h4 class="media-heading">@article.Title</h4>
            </a>
            @if (string.IsNullOrEmpty(article.ShortDescription))
            {
                <p>
                    <a href="@Url.Action("GetArticle", "Home", new { area = "", id = article.ID })">Read more...</a>
                </p>
            }
            else
            {
                <p>@article.ShortDescription</p>
            }
        </div>
    </div>
}

<div class="pagination pagination-centered">
    <ul>
        @if (Model.Page == 1)
        {
            <li class="disabled"><a href="#">Prev</a></li>
        }
        else
        {
            <li><a href="?page=@(Model.Page - 1)">Prev</a></li>
        }
        @if (Model.Page >= Model.PageCount)
        {
            <li class="disabled"><a href="#">Next</a></li>
        }
        else
        {
            <li><a href="?page=@(Model.Page + 1)">Next</a></li>
        }
    </ul>
</div>
