@model Review_Site.Models.Grid

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Grid</h2>

<h3>Are you sure you want to delete this grid?</h3>
<fieldset>
    <legend>Grid</legend>

    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">Alias</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Alias)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
<p>&nbsp;</p>
<p style="color: #FF0000;"><strong>All</strong> Grid Elements belonging to this grid will be deleted!</p>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" class="btn btn-danger" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
